{
  "description": "Automatically add iA Writer annotations to edited files",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto-annotate.js"
          }
        ]
      }
    ]
  }
}
